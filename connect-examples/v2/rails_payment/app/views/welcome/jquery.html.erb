<script type="text/javascript">
var cardNonce;
var paymentForm = new SqPaymentForm({
  applicationId: '<%=Rails.application.secrets.square_application_id %>',
  inputClass: 'sq-input',
  inputStyles: [
      {
        fontSize: '14px',
        padding: '7px 12px',
        backgroundColor: "transparent"
      }
    ],
  cardNumber: {
    elementId: 'sq-card-number',
    placeholder: '0000 0000 0000 0000'    
  },
  cvv: {
    elementId: 'sq-cvv',
    placeholder: 'CVV'
  },
  expirationDate: {
    elementId: 'sq-expiration-date',
    placeholder: 'MM/YY'
  },
  postalCode: {
    elementId: 'sq-postal-code',
    placeholder: '94110'
  },
  callbacks: {
    cardNonceResponseReceived: function(errors, nonce, cardData) {
      if (errors){
        var error_html = ""
        for (var i =0; i < errors.length; i++){
          error_html += "<li> " + errors[i].message + " </li>";
        }
        $("#card-errors").empty()
        $("#card-errors").append(error_html);
        $('#submit').disabled = false;
      }else{
        $("#card-errors").empty()
        chargeCardWithNonce(nonce);
      }
      
      
    },
    unsupportedBrowserDetected: function() {
      // Alert the buyer
    }
  }
});

var paymentFormSubmit = function(){
  console.log('submit clicked');
  $('#submit').disabled = true;
  paymentForm.requestCardNonce();
  return false;
}

var chargeCardWithNonce = function(nonce) {
  var product_id = $('#product_id').val();
  var name = $('#name').val();
  var email = $('#email').val();
  var street_address_1 = $('#street_address_1').val();
  var street_address_2 = $('#street_address_2').val();
  var city = $('#city').val();
  var state = $('#state').val();
  var zip = $('#zip').val();
  
  var url = "/charges/charge_card";

  var data = {
    nonce: nonce,
    product_id: product_id,
    name: name,
    email: email,         
    street_address_1: street_address_1,
    street_address_2: street_address_2,
    city: city,
    state: state,
    zip: zip
  };

  $.post( url, data, function( data ) {
      if (data.status == 200) {
        $("#successNotification").show();
        $("#payment-form").hide();
        window.scrollTo(0, 0);
      }else if (data.status == 400){
        var error_html = ""
        for (var i =0; i < data.errors.length; i++){
          error_html += "<li> " + data.errors[i].detail + " </li>";
        }
        $("#card-errors").empty()
        $("#card-errors").append(error_html);
        $('#submit').disabled = false;
      }
  });

}

$(function () {
    $.ajaxSetup({
        headers: { "X-CSRFToken": "<%= form_authenticity_token %>" }
    });
});

// required to work with rails turbolinks
$(document).on('page:change', function(){
  console.log('dom loaded')
  paymentForm.build()
});

</script>