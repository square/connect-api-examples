div(class="panel pickup-details")
    h4(class="panel-title") Order Details
    div(class="panel-field")
        label(class="sq-label") Delivery Method
        select(class="dropdown", name="fulfillment_type")
            option(value="PICKUP" selected) Pickup
        span(class="caret-button") <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.0" x="0px" y="0px" viewBox="0 0 100 125" enable-background="new 0 0 100 100" xml:space="preserve"><g display="none"><rect x="0" y="0.015" display="inline" fill="#000000" width="100" height="100"/></g><g><path d="M21.364,42.218l24.329,24.329c0.026,0.027,0.034,0.065,0.061,0.091c1.146,1.146,2.659,1.715,4.17,1.711   c1.511,0.004,3.023-0.564,4.17-1.711c0.027-0.027,0.034-0.064,0.061-0.091l24.329-24.329c2.285-2.285,2.285-6.024,0-8.308   s-6.024-2.285-8.308,0L49.923,54.161L29.672,33.91c-2.285-2.285-6.024-2.285-8.308,0S19.079,39.934,21.364,42.218z"/></g></svg>
    div(class="panel-field")
        label(class="sq-label") Pickup at
        div #{location_info.storeName}
        div #{location_info.addressLine}
        div #{location_info.cityStateZip}
    div(class="panel-field")
        label(class="sq-label") Pickup Time
        div(class="time-options")
            each timeOption, index in pick_up_times.options
                input(id=timeOption.time,type="radio",name="pickup_time",data-pickup-date=timeOption.date, value=timeOption.value, checked = index === 0) 
                label(class="time-option",for=timeOption.time) #{timeOption.time}
    div(class="panel-field")
        label(class="sq-label") Pickup Name
        input(class="panel-input", name="pickup_name",type="text", placeholder="Pickup Name", autocomplete="name", required)
    div(class="panel-field")
        label(class="sq-label") Pickup Phone Number
        input(class="panel-input", name="pickup_number",type="tel", placeholder="Pickup Number", autocomplete="tel", required)
    div(class="panel-field")
        label(class="sq-label") Pickup Email 
            span(class="subtext") (Optional)
    input(class="panel-input", name="pickup_email",type="email", placeholder="Pickup Email", autocomplete="email")